{
  "name": "Professional Report",
  "extension": "html",
  "description": "Professional HTML report with responsive design",
  "css_framework": "bootstrap",
  "content": "<!DOCTYPE html>\n<html lang=\"es\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>{{titulo}}</title>\n    <link href=\"https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css\" rel=\"stylesheet\">\n    <style>\n        .report-header {\n            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);\n            color: white;\n            padding: 2rem 0;\n            margin-bottom: 2rem;\n        }\n        .metric-card {\n            background: #f8f9fa;\n            border-radius: 10px;\n            padding: 1.5rem;\n            margin: 1rem 0;\n            border-left: 4px solid #007bff;\n        }\n        .status-badge {\n            padding: 0.5rem 1rem;\n            border-radius: 20px;\n            font-weight: bold;\n        }\n        .status-active { background-color: #d4edda; color: #155724; }\n        .status-pending { background-color: #fff3cd; color: #856404; }\n        .status-completed { background-color: #d1ecf1; color: #0c5460; }\n    </style>\n</head>\n<body>\n    <div class=\"report-header text-center\">\n        <h1>{{titulo}}</h1>\n        <h5>{{empresa}}</h5>\n        <p class=\"mb-0\">Generado el {{fecha}} a las {{hora}}</p>\n    </div>\n\n    <div class=\"container-fluid\">\n        <div class=\"row\">\n            <div class=\"col-md-8 mx-auto\">\n                <div class=\"metric-card\">\n                    <h4>üìã Introducci√≥n</h4>\n                    <p>{{introduccion}}</p>\n                </div>\n\n                <div class=\"metric-card\">\n                    <h4>üéØ Objetivo</h4>\n                    <p>{{objetivo}}</p>\n                </div>\n\n                <div class=\"row\">\n                    <div class=\"col-md-4\">\n                        <div class=\"metric-card text-center\">\n                            <h5>{{metrica1}}</h5>\n                            <h3 class=\"text-primary\">{{valor1}}</h3>\n                            <span class=\"status-badge status-{{estado1_class}}\">{{estado1}}</span>\n                        </div>\n                    </div>\n                    <div class=\"col-md-4\">\n                        <div class=\"metric-card text-center\">\n                            <h5>{{metrica2}}</h5>\n                            <h3 class=\"text-success\">{{valor2}}</h3>\n                            <span class=\"status-badge status-{{estado2_class}}\">{{estado2}}</span>\n                        </div>\n                    </div>\n                    <div class=\"col-md-4\">\n                        <div class=\"metric-card text-center\">\n                            <h5>{{metrica3}}</h5>\n                            <h3 class=\"text-info\">{{valor3}}</h3>\n                            <span class=\"status-badge status-{{estado3_class}}\">{{estado3}}</span>\n                        </div>\n                    </div>\n                </div>\n\n                <div class=\"metric-card\">\n                    <h4>üí° An√°lisis</h4>\n                    <p>{{analisis}}</p>\n                </div>\n\n                <div class=\"metric-card\">\n                    <h4>üîç Conclusiones</h4>\n                    <p>{{conclusiones}}</p>\n                </div>\n            </div>\n        </div>\n    </div>\n\n    <footer class=\"text-center mt-5 py-3 bg-light\">\n        <p class=\"mb-0\">Generado autom√°ticamente por Project Manager | {{fecha}} {{hora}}</p>\n    </footer>\n\n    <script src=\"https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js\"></script>\n</body>\n</html>"
}